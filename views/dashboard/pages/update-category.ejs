<% include ../partials/header%>
<%- include ../partials/sidebar%>
<div class="row">
        <div class="col-lg-12">
          <div class="card">
            <div class="card-body">
                <h4 class="form-header text-uppercase">
                  <i class="fa fa-user-circle-o"></i>
                  SUA DANH MỤC
                </h4>
                <div class="form-group row">
                  <label for="input-2" class="col-sm-2 col-form-label">Tên Danh Mục</label>
                  <div class="col-sm-10">
                    <input type="text" name='nameCategory' value = '<%=category.properties.name%>' id="category-name" class="form-control" required>
                  </div>
                </div>
               
                <h2>Có thể điền hoặc bỏ trống</h2>
                <div class="form-group row">
                  <label for="input-2" class="col-sm-2 col-form-label">đối tượng thường mua</label>
                  <select class="form-control" name='category' id="sex" required>
                    <option value="1">nam</option>
                    <option value="0">nu</option>
                    <option value="2">ca 2</option>
                  </select>
                </div>
                <div class="form-group row">
                  <label for="input-2" class="col-sm-2 col-form-label">độ tuổi thường mua</label>
                  <select class="form-control" name='category' id="old" required>
                    <option value="20">duoi 20</option>
                    <option value="35">tu 20 den 35</option>
                    <option value="40">tu 35 tro len </option>
                  </select>

                </div>
                
                <div class="form-footer">
                    <button  class="btn btn-success" id="btn-save">
                      <i class="fa fa-check-square-o" ></i> 
                      Lưu vào CSDL
                    </button>
                </div>
            </div>
          </div>
        </div>
      </div><!--End Row-->
<%- include ../partials/footer%>
<script>
  $(document).ready(function(){
    $('#btn-save').click(function(){
      let categoryName = $('#category-name').val();
      let old = '';
      let sex = '';
      old     =  $( "#old option:selected" ).val();
      sex     = $( "#sex option:selected" ).val();
      $.ajax({
        url     : '/categorys/update',
        method  : 'post',
        data    :{
          categoryName    : categoryName,
          oldMajority     : old,
          maleManiority   : sex
        },
        success : function(data){
          console.log(data)
        },
        error   : function(err){
          console.log(err)
        }
      })
    });
  })
</script>